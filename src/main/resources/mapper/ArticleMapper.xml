<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.blog.model.entity.Article">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="subtitle" property="subtitle" />
        <result column="submit_token" property="submitToken" />
        <result column="salt" property="salt" />
        <result column="admin_id" property="adminId" />
        <result column="context" property="context" />
        <result column="status" property="status" />
        <result column="view_count" property="viewCount" />
        <result column="up_count" property="upCount" />
        <result column="down_count" property="downCount" />
        <result column="create_date" property="createDate" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, subtitle, submit_token, salt, admin_id, context, status, view_count, up_count, down_count, create_date, update_time
    </sql>

</mapper>
